<!doctype html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Bootstrap demo</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
		integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
</head>

<body>
	<div class="container-fluid my-md-0 my-5 py-md-0 py-5">
		<div class="row my-5 p-5 ">
			<div class="card col-md-5 mx-auto py-3 h2">
				<h2 class="text-center">Login</h2>
				<form action="/login" method="post">
					<!-- user input-->
					<div class="form-group my-3">
						<label class="mb-2" for="">Username:</label>
						<input class="form-control" type="text" name="username" placeholder="Username" required>
					</div>
					<div class="form-group my-3">
						<label class="mb-2" for="">Password:</label>
						<input class="form-control" type="password" name="password" placeholder="Password" required>
					</div>
					<!-- submit button -->
					<input class="btn btn-primary" type="submit" value="Login">
					|
					<a class="btn btn-xs btn-danger" href="/register">Sign Up</a>
				</form>
			</div>
		</div>
	</div>
</body>

</html>