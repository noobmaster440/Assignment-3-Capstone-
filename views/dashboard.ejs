<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Bootstrap demo</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
</head>

<body>
  <div class="container-fluid">
    <div class="row my-3 text-center">
      <div class="col-12">
        <a class="btn btn-primary" href="/login">Log out</a>
        
      </div>
    </div>
    <div class="row text-center">
      <a class="h2 text-decoration-none" href="/posts/new">Create a new post</a>
        <h1>
          <% username %>
        </h1>
        <% for(var i=0;i<posts.length;i++){ %>
          <div class="col-3 p-3">
            <div class="card bg-light">
              <h1>
                <%= posts[i].title %>
              </h1>
              <p>
                <%= posts[i].body %>
              </p>
              <div class="row py-3">
                <form id="deleteForm" action="/posts/<%=posts[i]._id%>?_method=DELETE" method="POST">
                  <a class="btn btn-xs btn-info" href="/posts/<%=posts[i]._id%>/edit">Update</a>
                  <button class="btn btn-xs btn-danger">Delete</button>
                </form>
              </div>
            </div>
          </div>
          <% } %>
            <br>
           
      </div>
    </div>
  </div>
</body>

</html>